{$R *.dfm}

uses DbConfiguracoesGeral;


procedure TOpções.Button1Click(Sender: TObject);
begin

  // Inserir diretorio campo HUB
  DbConfiguraçãoGeral.InsrerirDireotiros.close;
  DbConfiguraçãoGeral.InsrerirDireotiros.Sql.Clear;
  DbConfiguraçãoGeral.InsrerirDireotiros.Sql.Add('INSERT INTO configuracoes(nmconfiguracao, dsvalorantigo,dsvalornovo, dtcadastro)') ;
  DbConfiguraçãoGeral.InsrerirDireotiros.Sql.Add('VALUES (:new_nmconfiguracao, :new_dsvalorantigo,:new_dsvalornovo, :new_dtcadastro)')  ;
  DbConfiguraçãoGeral.InsrerirDireotiros.ParamByname('new_nmconfiguracao').AsString := 'diretorioHUB';
  DbConfiguraçãoGeral.InsrerirDireotiros.ParamByname('new_dsvalorantigo').AsString := DBEdit1.text;
  DbConfiguraçãoGeral.InsrerirDireotiros.ParamByname(':new_dsvalornovo').AsString := DBEdit1.text;
  DbConfiguraçãoGeral.InsrerirDireotiros.ParamByname('new_dtcadastro').AsDate := now;
  DbConfiguraçãoGeral.InsrerirDireotiros.ExecSQL;

end;

end.
