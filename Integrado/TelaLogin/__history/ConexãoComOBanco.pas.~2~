unit ConexãoComOBanco;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.Mask, Vcl.DBCtrls;

type
  TConexãoBancoDeDados = class(TForm)
    DBEdit1: TDBEdit;
    DBEdit2: TDBEdit;
    Ip: TLabel;
    NomeBancoDeDados: TLabel;
    DBEdit3: TDBEdit;
    Usuario: TLabel;
    DBEdit4: TDBEdit;
    Senha: TLabel;
    ConectarBanco: TButton;
    DBEdit5: TDBEdit;
    Porta: TLabel;
    procedure ConectarBancoClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  ConexãoBancoDeDados: TConexãoBancoDeDados;

implementation

{$R *.dfm}

uses DbPrincipal;

procedure TConexãoBancoDeDados.ConectarBancoClick(Sender: TObject);
begin
DbMaster.ConexãoDb.Params.Clear;
DbMaster.ConexãoDb.Params.Add('DriverID=PG');
DbMaster.ConexãoDb.Params.Add('Database='+DBEdit3.Text);
DbMaster.ConexãoDb.Params.Add('User_Name='+DBEdit2.Text);
DbMaster.ConexãoDb.Params.Add('Password='+DBEdit4.Text);
DbMaster.ConexãoDb.Params.Add('Server='+DBEdit1.Text);
DbMaster.ConexãoDb.Params.Add('Server='+DBEdit1.Text);
DbMaster.ConexãoDb.Params.Add('Port='+DBEdit5.Text);

end;

end.
